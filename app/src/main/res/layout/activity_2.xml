    <Button
        android:id="@+id/b_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="100dp"
        android:text="English"
        android:background="#65327b"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_ca" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="49dp"
        android:layout_height="38dp"
        android:elevation="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/b_ca"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="@+id/b_ca"
        app:layout_constraintTop_toTopOf="@+id/b_ca"
        app:srcCompat="@drawable/catalan" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="49dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
