<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBG"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/app_wellcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:background="@color/colorEtiq"
        android:layout_weight="1"
        android:text="APP"/>

    <TextView
        android:id="@+id/session_initied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:background="@color/colorEtiq"
        android:layout_weight="1"
        android:text="Geolocalization latitude"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/getLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Init params"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block Internet"
            android:layout_weight="1"
            android:id="@+id/blockInternet"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block WIFI"
            android:layout_weight="1"
            android:id="@+id/blockWifi"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Readings"
            android:layout_weight="1"
            android:id="@+id/readings"/>

    </LinearLayout>

    <TextView
        android:id="@+id/et_geoloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTitle"
        android:layout_gravity="center_horizontal"
        android:textSize="14dp"
        android:layout_weight="1"
        android:text="Geolocalitzacio:"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/et_lat"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorEtiq"
            android:layout_weight="1"
            android:text="Latitud:"/>

        <TextView
            android:id="@+id/loc_lat"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:text="PEND"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/et_lon"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorEtiq"
            android:layout_weight="1"
            android:text="Longitud:"/>

        <TextView
            android:id="@+id/loc_lon"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:text="PEND"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_alt"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorEtiq"
            android:layout_weight="1"
            android:text="Altitud:"/>

        <TextView
            android:id="@+id/loc_alt"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:text="PEND"/>

    </LinearLayout>

    <TextView
        android:id="@+id/et_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTitle"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="Connexions:"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_connect_net"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorEtiq"
            android:layout_weight="1"
            android:text="ConnexiÃ³ xarxa:"/>

        <TextView
            android:id="@+id/connect_net"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:text="PEND"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_connect_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorEtiq"
            android:layout_weight="1"
            android:text="Internet:"/>

        <TextView
            android:id="@+id/connect_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:text="PEND"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_connect_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorEtiq"
            android:layout_weight="1"
            android:text="WIFI:"/>

        <TextView
            android:id="@+id/connect_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:text="PEND" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_connect_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorEtiq"
            android:layout_weight="1"
            android:text="Mobile connection:"/>

        <TextView
            android:id="@+id/connect_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:text="PEND"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo_imei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorEtiq"
            android:textStyle="bold"
            android:text="IMEI"/>

        <TextView
            android:id="@+id/mostrar_imei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/et_reads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTitle"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="Reads:"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_read_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorEtiq"
            android:textStyle="bold"
            android:text="READ WIFI"/>

        <TextView
            android:id="@+id/read_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PEND"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_read_field2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorEtiq"
            android:textStyle="bold"
            android:text="READ FIELD2"/>

        <TextView
            android:id="@+id/read_field2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@color/colorField"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PEND"/>

    </LinearLayout>


</LinearLayout>